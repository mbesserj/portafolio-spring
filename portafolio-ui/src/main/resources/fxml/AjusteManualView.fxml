<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.AjusteManualController">
    <children>
        <Label fx:id="lblTituloVentana" text="%ventana.ajuste.titulo">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <children>
                <Label text="%label.ajuste.tx_original" GridPane.columnSpan="2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="%label.ajuste.tx_id" GridPane.rowIndex="1" />
                <Label fx:id="lblTransaccionId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="%label.instrumento" GridPane.rowIndex="2" />
                <Label fx:id="lblInstrumento" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="%label.fecha" GridPane.rowIndex="3" />
                <Label fx:id="lblFecha" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="%label.ajuste.cantidad_original" GridPane.rowIndex="4" />
                <Label fx:id="lblCantidadOriginal" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
                <Label fx:id="lblTituloAjuste" text="%label.ajuste.nuevo_ajuste" GridPane.columnSpan="2" GridPane.rowIndex="6">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </GridPane>
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="%label.ajuste.cantidad_ajustar" />
                <TextField fx:id="txtCantidadAjuste" maxWidth="100.0" minWidth="100.0" GridPane.columnIndex="1" />
                <Label text="%label.ajuste.precio_sugerido" GridPane.rowIndex="1" />
                <Label fx:id="lblPrecioPromedio" style="-fx-font-weight: bold;" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="%label.ajuste.precio_manual" GridPane.rowIndex="2" />
                <TextField fx:id="txtPrecioManual" maxWidth="100.0" minWidth="100.0" promptText="%prompt.ajuste.precio_manual" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="%label.ajuste.monto_total" GridPane.rowIndex="3" />
                <Label fx:id="lblMontoTotal" style="-fx-font-weight: bold;" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
                <Label text="%ultimo.saldo.conocido" style="-fx-font-style: italic;" GridPane.rowIndex="6" />
                <Label fx:id="lblSaldoAnterior" text=" (No disponible)" style="-fx-font-style: italic;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" text="%button.cancelar" />
                <Button fx:id="btnAprobar" mnemonicParsing="false" onAction="#handleAprobar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="%button.crear.ajuste" />
            </children>
        </HBox>
    </children>
</VBox>