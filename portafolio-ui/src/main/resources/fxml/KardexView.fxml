<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.KardexController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-weight: bold;" text="%ventana.kardex.filtros.titulo" />
            
            <HBox alignment="BOTTOM_LEFT" spacing="20">
                <com.ui.controller.FiltroGrupo fx:id="filtroGrupo" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <ProgressIndicator fx:id="progressIndicator" prefHeight="25" prefWidth="25" visible="false" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tablaKardex" onMouseClicked="#handleTableDoubleClick">
            <columns>
                <TableColumn fx:id="colFecha" prefWidth="90" text="%ventana.kardex.col.fecha" />
                <TableColumn fx:id="colTipo" prefWidth="100" text="%ventana.kardex.col.operacion" />
                <TableColumn fx:id="colNemo" prefWidth="100" text="%ventana.kardex.col.nemo" />
                <TableColumn fx:id="colCantidadCompra" prefWidth="90" text="%ventana.kardex.col.cantCompra" />
                <TableColumn fx:id="colPrecioCompra" prefWidth="100" text="%ventana.kardex.col.precioCompra" />
                <TableColumn fx:id="colMontoCompra" prefWidth="100" text="%ventana.kardex.col.montoCompra" />
                <TableColumn prefWidth="2" text="" />
                <TableColumn fx:id="colCantidadVenta" prefWidth="90" text="%ventana.kardex.col.cantVenta" />
                <TableColumn fx:id="colPrecioVenta" prefWidth="100" text="%ventana.kardex.col.precioVenta" />
                <TableColumn fx:id="colFechaConsumo" prefWidth="100" styleClass="centered-column-cell" text="%ventana.kardex.col.fechaCompra" />
                <TableColumn fx:id="colCostoFifo" prefWidth="100" text="%ventana.kardex.col.costoFifo" />
                <TableColumn prefWidth="2" text="" />
                <TableColumn fx:id="colMargen" prefWidth="100" text="%ventana.kardex.col.margen" />
                <TableColumn fx:id="colCostoTotalFifo" prefWidth="100" text="%ventana.kardex.col.costoVenta" />
                <TableColumn fx:id="colUtilidadPerdida" prefWidth="100" text="%ventana.kardex.col.utilidad" />
                <TableColumn prefWidth="2" text="" />
                <TableColumn fx:id="colSaldo" prefWidth="100" text="%ventana.kardex.col.saldo" />
                <TableColumn fx:id="colMonto" prefWidth="100" text="%ventana.kardex.col.costoInversion" />
            </columns>
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleCerrar" text="%ventana.kardex.boton.cerrar" />
        </HBox>
    </bottom>
</BorderPane>