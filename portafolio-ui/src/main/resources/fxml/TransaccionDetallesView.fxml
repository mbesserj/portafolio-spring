<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.TransaccionDetallesController">
   <children>
      <Label text="Detalles de la Transacción">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator prefWidth="200.0" />
      <GridPane hgap="10.0" vgap="8.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        
        <!-- El bloque <rowConstraints> vacío ha sido eliminado -->
        
         <children>
            <Label text="ID:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" />
            <Label fx:id="lblId" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Fecha:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
            <Label fx:id="lblFecha" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Folio:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
            <Label fx:id="lblFolio" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Instrumento:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" />
            <Label fx:id="lblInstrumento" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Tipo Movimiento:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" />
            <Label fx:id="lblTipoMovimiento" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Tipo Contable:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" />
            <Label fx:id="lblTipoContable" text="-" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="6" />
            <Label text="Cantidad:" style="-fx-font-weight: bold;" GridPane.rowIndex="7" />
            <Label fx:id="lblCantidad" text="-" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <Label text="Precio:" style="-fx-font-weight: bold;" GridPane.rowIndex="8" />
            <Label fx:id="lblPrecio" text="-" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <Label text="Total:" style="-fx-font-weight: bold;" GridPane.rowIndex="9" />
            <Label fx:id="lblTotal" text="-" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            <Separator prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="10" />
            <Label text="Costeado:" style="-fx-font-weight: bold;" GridPane.rowIndex="11" />
            <Label fx:id="lblCosteado" text="-" GridPane.columnIndex="1" GridPane.rowIndex="11" />
            <Label text="Para Revisión:" style="-fx-font-weight: bold;" GridPane.rowIndex="12" />
            <Label fx:id="lblParaRevision" text="-" GridPane.columnIndex="1" GridPane.rowIndex="12" />
         </children>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#handleCerrar" text="Cerrar">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
