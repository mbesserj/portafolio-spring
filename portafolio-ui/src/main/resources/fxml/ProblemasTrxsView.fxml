<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.ProblemasTrxsController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Transacciones con Problemas de Costeo" />
            <Label text="Este módulo muestra transacciones marcadas para revisión debido a problemas en el proceso de costeo." wrapText="true"/>
            <GridPane hgap="10" prefHeight="57.0" prefWidth="691.0" vgap="5">
                <Label text="Empresa:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="cmbEmpresa" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Custodio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbCustodio" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <columnConstraints>
                    <ColumnConstraints maxWidth="71.5" minWidth="56.5" prefWidth="62.5" />
                    <ColumnConstraints maxWidth="246.0" minWidth="231.0" prefWidth="240.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="33.0" minHeight="26.0" prefHeight="26.0" />
                    <RowConstraints maxHeight="26.0" minHeight="19.0" prefHeight="26.0" />
                </rowConstraints>
            </GridPane>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="btnBuscar" defaultButton="true" onAction="#handleBuscar" text="Consultar Transacciones" />
                <ProgressIndicator fx:id="progressIndicator" prefHeight="25" prefWidth="25" visible="false" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tablaTransacciones">
            <columns>
                <TableColumn fx:id="colFecha" prefWidth="100" text="Fecha" />
                <TableColumn fx:id="colFolio" prefWidth="100" text="Folio" />
                <TableColumn fx:id="colTipo" prefWidth="200" text="Tipo Movimiento" />
                <TableColumn fx:id="colNemo" prefWidth="200" text="Nemo del Instrumento" />
                <TableColumn fx:id="colCompras" prefWidth="120" text="Compras" />
                <TableColumn fx:id="colVentas" prefWidth="120" text="Ventas" />
                <TableColumn fx:id="colPrecio" prefWidth="120" text="Precio" />
                <TableColumn fx:id="colTotal" prefWidth="120" text="Total" />
                <TableColumn fx:id="colCosteado" prefWidth="80" text="Costeado" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button onAction="#handleCerrar" text="Cerrar" />
        </HBox>
    </bottom>
</BorderPane>
