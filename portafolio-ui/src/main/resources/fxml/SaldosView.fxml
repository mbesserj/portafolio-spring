<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.SaldosController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Reporte de Valorización de Portafolio" />
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="80.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                
                <Label text="Empresa:" GridPane.rowIndex="0" />
                <ComboBox fx:id="cmbEmpresa" prefWidth="200.0" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Custodio:" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbCustodio" prefWidth="200.0" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Button fx:id="btnBuscar" onAction="#handleBuscarSaldos" text="Buscar Saldos" defaultButton="true" />
                    <ProgressIndicator fx:id="progressIndicator" prefHeight="25" prefWidth="25" visible="false" />
                </HBox>
            </GridPane>
        </VBox>
    </top>
    <center>
        <VBox>
            <TableView fx:id="tablaSaldos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNemo" prefWidth="100.0" text="Nemo" />
                    <TableColumn fx:id="colNombreInstrumento" prefWidth="300.0" text="Nombre Instrumento" />
                    <TableColumn fx:id="colSaldo" prefWidth="100.0" text="Saldo" />
                    <TableColumn fx:id="colCostoUnitario" prefWidth="100.0" text="Costo Unit." />
                    <TableColumn fx:id="colCostoTotal" prefWidth="120.0" text="Costo Total" />
                    <TableColumn fx:id="colPrecioMercado" prefWidth="100.0" text="Precio Mercado" />
                    <TableColumn fx:id="colValorMercado" prefWidth="120.0" text="Valor Mercado" />
                    <TableColumn fx:id="colUtilidad" prefWidth="120.0" text="Utilidad / Pérdida" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10; -fx-font-size: 14px; -fx-border-color: lightgray transparent transparent transparent; -fx-border-width: 1;">
                <Label style="-fx-font-weight: bold;" text="Totales:" />
                <Label text="Costo:" />
                <Label fx:id="lblTotalInversion" style="-fx-font-weight: bold;" text="\$0" />
                <Label text="Mercado:" style="-fx-padding: 0 0 0 20;" />
                <Label fx:id="lblTotalMercado" style="-fx-font-weight: bold;" text="\$0" />
                <Label text="Utilidad:" style="-fx-padding: 0 0 0 20;" />
                <Label fx:id="lblTotalUtilidad" style="-fx-font-weight: bold;" text="\$0" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleCerrar" text="Cerrar" />
        </HBox>
    </bottom>
</BorderPane>