<?xml version="1.0" encoding="UTF-8"?>

<?import com.ui.controller.FiltroPortafolio?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.ResumenPortafolioController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label styleClass="titulo-vista" text="%ventana.resumen.titulo" />
            <FiltroPortafolio fx:id="filtroGrupo" />
        </VBox>
    </top>
    <center>
        <TableView fx:id="tablaResumen">
            <columns>
                <TableColumn fx:id="colNemo" prefWidth="100" text="%col.nemo" />
                <TableColumn fx:id="colInstrumento" prefWidth="200" text="%col.instrumento" />
                <TableColumn fx:id="colSaldo" prefWidth="120" text="%col.saldo.disponible" />
                <TableColumn fx:id="colCosto" prefWidth="120" text="%col.costo.fifo" />
                <TableColumn fx:id="colMercado" prefWidth="120" text="%col.valor.mercado" />
                <TableColumn fx:id="colDividendos" prefWidth="120" text="%col.dividendos" />
                <TableColumn fx:id="colGastos" prefWidth="120" text="%col.gastos" />
                <TableColumn fx:id="colUtilRealizada" prefWidth="120" text="%col.utilidad.realizada" />
                <TableColumn fx:id="colUtilNoRealizada" prefWidth="120" text="%col.utilidad.no.realizada" />
                <TableColumn fx:id="colRentabilidad" prefWidth="120" text="%col.rentabilidad" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="25" prefHeight="25" />
            <Label text="Utilidad Total Realizada:" style="-fx-font-weight: bold;" />
            <Label fx:id="lblTotalUtilidadRealizada" text="0" style="-fx-font-weight: bold;" />
             <Label text="Utilidad Total No Realizada:" style="-fx-font-weight: bold;" />
            <Label fx:id="lblTotalUtilidadNoRealizada" text="0" style="-fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>