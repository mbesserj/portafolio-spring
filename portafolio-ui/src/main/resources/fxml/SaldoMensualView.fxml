<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="613.0" prefWidth="1202.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.SaldoMensualController">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Reporte de Saldos Mensuales por Instrumento" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> 
                </rowConstraints>
                <children>
                    <Label text="Empresa:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="cmbEmpresa" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
                    <Label text="Custodio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cmbCustodio" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
                    <Label text="AÃ±o:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Spinner fx:id="spinnerAnio" editable="true" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Moneda:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <children>
                            <RadioButton fx:id="radioCLP" selected="true" text="CLP">
                                <toggleGroup>
                                    <ToggleGroup fx:id="monedaToggleGroup" />
                                </toggleGroup>
                        <padding>
                           <Insets top="5.0" />
                        </padding>
                            </RadioButton>
                            <RadioButton fx:id="radioUSD" text="USD" toggleGroup="$monedaToggleGroup">
                        <padding>
                           <Insets top="5.0" />
                        </padding></RadioButton>
                        </children>
                    </HBox>
                </children>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" maxWidth="215.0" spacing="10">
                <ProgressIndicator fx:id="progressIndicator" prefHeight="25" prefWidth="25" visible="false" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tablaSaldos" prefHeight="360.0" prefWidth="1150.0">
            <columns>
                <TableColumn fx:id="colNemo" prefWidth="120.0" text="Nemo" />
                <TableColumn fx:id="colInstrumento" prefWidth="260.0" text="Instrumento" />
                <TableColumn fx:id="colEnero" prefWidth="110.0" text="Enero" />
                <TableColumn fx:id="colFebrero" prefWidth="110.0" text="Febrero" />
                <TableColumn fx:id="colMarzo" prefWidth="110.0" text="Marzo" />
                <TableColumn fx:id="colAbril" prefWidth="110.0" text="Abril" />
                <TableColumn fx:id="colMayo" prefWidth="110.0" text="Mayo" />
                <TableColumn fx:id="colJunio" prefWidth="110.0" text="Junio" />
                <TableColumn fx:id="colJulio" prefWidth="110.0" text="Julio" />
                <TableColumn fx:id="colAgosto" prefWidth="110.0" text="Agosto" />
                <TableColumn fx:id="colSeptiembre" prefWidth="110.0" text="Septiembre" />
                <TableColumn fx:id="colOctubre" prefWidth="110.0" text="Octubre" />
                <TableColumn fx:id="colNoviembre" prefWidth="110.0" text="Noviembre" />
                <TableColumn fx:id="colDiciembre" prefWidth="110.0" text="Diciembre" />
            </columns>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <Pane prefHeight="45.0" prefWidth="1202.0" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
